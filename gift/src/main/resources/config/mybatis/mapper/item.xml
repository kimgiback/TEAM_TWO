<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="item">

	<!-- 상품 상세 -->
	<select id="item_detail" parameterType="Integer" resultType="item">
		SELECT *
		FROM ITEM
		WHERE ITEM_NO = #{item_no}
	</select>
	
	 <!-- 조회수 증가 -->
  <select id="readhit_update" parameterType="Integer">
		UPDATE ITEM SET readhit = readhit + 1
		WHERE item_no = #{item_no}
	</select>
	


	
</mapper>












